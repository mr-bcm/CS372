<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/tvSideNotify" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNotifySide"
        android:textSize="40dp"
        android:layout_above="@+id/btnCoinFlip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="181dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCoinFlip"
        android:id="@+id/btnCoinFlip"
        android:textSize="25dp"
        android:layout_marginBottom="101dp"
        android:onClick="toggleCoin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
